$color-unknown: hsl(0,0%,80%);
$color-done: hsl(120,80%,65%);
$color-failed: hsl(0,100%,70%);

@mixin result-button ($color) {
  background-color: $color;
    opacity: 1;
    transition-property: opacity;
  &:hover {
    background-color: $color;
    opacity: 0.6;
  }
  &:active {
    //background-color: hsl($hue,100%,60%);
    background-color: darken($color, 15%);
  }
}
button.unknown {
    @include result-button($color-unknown);
    // background-color: hsl(0,0%,70%);
    // //background-color: #f7ff75;
    i { opacity: 0.9; }
    color: white;
    &:hover { 
        color: black;
    }
}
button.failed {
    @include result-button($color-failed);
    i {
        opacity: 0.9; // No "ok" icon
    }
}
button.done {
    @include result-button($color-done);
    i { 
        color: green; 
    }
}

